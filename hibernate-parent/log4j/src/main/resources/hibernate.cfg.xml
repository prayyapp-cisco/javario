<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration SYSTEM "classpath://org/hibernate/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.password">java</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost/training</property>
		<property name="hibernate.connection.username">java</property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>

		<property name="hibernate.current_session_context_class">thread</property>
		<property name="hibernate.show_sql">true</property>

		<mapping class="org.shoban.hibernate.log4j.model.Employee" />
		<mapping class="org.shoban.hibernate.log4j.model.Address" />
	</session-factory>
</hibernate-configuration>
